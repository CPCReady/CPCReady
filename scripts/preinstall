
#!/bin/bash

# Check for dos2unix
if ! command -v dos2ux &> /dev/null; then
    echo "Error: dos2unix is not installed. Please install dos2unix and try again." >&2
    exit 1
fi

# Check for jq
if ! command -v jq &> /dev/null; then
    echo "Error: jq is not installed. Please install jq and try again." >&2
    exit 1
fi

exit 0
