## Bash Include files
source $(dirname $0)/lib/library.sh

## Chequeamos si existe el archivo de variables.
## si no existe salimos con error
check_env_file

## Cargamos archivo de variables
source .cpc

# Function to display help message
show_help() {
    
    CPCREADY
    echo "Create disk image."
    echo 
    echo "Use: $(basename "$0") [option]"
    echo "  -h, --help     Show this help message."
    echo "  -v, --version  Show version this software."
    echo "Option:"
    echo "  [parameter]  Name of disc image to create."
    echo "               If the parameter is empty, shows the"
    echo "               current value."
    ready
    exit 0

}

# Check if the help parameter is provided
case $1 in
    -v|--version)
        show_version
        ready
        exit 0
        ;;
    -h|--help)
        show_help
        exit 0
        ;;
esac

# Check if exactly one parameter is provided
if [ "$#" -ne 1 ]; then
    message_info "The current value of DISC project is $DISC"
    exit 0
fi

if [ -e "$DISC" ]; then
    while true; do
        echo
        read -p "Already exists a disk image named '$DISC'. Do you want to add another one? (y/n): " respuesta
        echo
        case $respuesta in
            [Yy]* ) create_dsk "$1"; change_disc "$1" "$PWD"; break;;
            [Nn]* ) exit;;
            * ) echo "Please respond with 'y' or 'n'.";;
        esac
    done
else
    ## Create disk image
    create_dsk "$1"
    ## Change disk image if exists environment file
    if [ -f .cpc ]; then
        change_disc "$1" "$PWD"
    fi
fi


