## Bash Include files

source "$CPCREADY/bin/lib/library.sh"

cd $1

if [ ! -f "$PATH_CONFIG_PROJECT/$CONFIG_CPCREADY" ]; then
    PRINT ERROR_NO_EXIT "There is no CPCReady project. Cannot use Amstrad console."
    echo
    read -n 1 -r -s -p $'Press enter to continue...\n'
else
    amstrad
fi

